<!-- Chat Interface START -->
<div class="chat-interface" id="chatInterface" style="display: none;">
    <div class="row g-0">
        <!-- Main chat area -->
        <div class="col-lg-9 chat-main border-end">
            <!-- Chat Header -->
            <div class="flex items-center justify-between p-4 border-b">
                <div class="flex items-center gap-3">
                    <button class="back-to-forums text-gray-500 hover:text-gray-700" id="backToForums">
                        <i class="fas fa-arrow-left"></i>
                    </button>
                    <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-white">
                        {% if forum %}
                            <span class="text-lg font-semibold">{{ forum.subject|slice(0, 1)|upper }}</span>
                        {% endif %}
                    </div>
                    <div>
                        <h2 class="font-medium">{{ forum ? forum.subject : '' }}</h2>
                        <p class="text-sm text-gray-500">{{ forum ? forum.onlineCount ~ ' ' ~ 'en ligne'|trans : '' }}</p>
                    </div>
                </div>
                <div class="flex items-center gap-2">
                    <button class="p-2 hover:bg-gray-100 rounded-full" id="emojiButton" data-bs-toggle="tooltip" title="{% trans %}ADD_EMOJI_KEY{% endtrans %}">
                        <i class="fas fa-search text-gray-500"></i>
                    </button>
                    <button class="p-2 hover:bg-gray-100 rounded-full">
                        <i class="fas fa-ellipsis-v text-gray-500"></i>
                    </button>
                </div>
            </div>

            <!-- Connection Status -->
            <div class="connection-status bg-yellow-100 text-yellow-800 px-4 py-2 text-sm d-none" role="alert">
                {% trans %}Connecting to chat server...{% endtrans %}
            </div>

            <!-- Messages Area -->
            <div class="flex-1 overflow-y-auto p-4 bg-gray-50" id="messagesContainer">
                <div class="chat-messages space-y-4">
                    {{ include('student/chat/forum/_messages.html.twig', { 
                        messages: messages|default([]),
                        forum: forum
                    }) }}
                </div>
                <!-- Typing Indicator -->
                <div class="typing-indicator text-gray-500 text-sm mt-2 d-none">
                    <i class="fas fa-keyboard me-1"></i>
                    <span>{% trans %}SOMEONE_IS_TYPING_KEY{% endtrans %}</span>
                </div>
            </div>

            <!-- Message Input -->
            <div class="p-4 border-t bg-white">
                <form class="chat-input-form flex items-center gap-2" id="messageForm">
                    <button type="button" class="p-2 hover:bg-gray-100 rounded-full" id="emojiButton" data-bs-toggle="tooltip" title="{% trans %}ADD_EMOJI_KEY{% endtrans %}">
                        <i class="far fa-smile text-gray-500"></i>
                    </button>
                    <textarea class="flex-1 px-4 py-2 rounded-full bg-gray-100 focus:outline-none focus:ring-2 focus:ring-primary/50" 
                              id="messageInput" rows="1" 
                              placeholder="{% trans %}TYPE_YOUR_MESSAGE_KEY{% endtrans %}"
                              maxlength="500"
                              data-emojiable="true"></textarea>
                    <div class="char-counter" id="charCounter">500</div>
                    <button type="submit" class="p-2 hover:bg-gray-100 rounded-full" id="sendButton">
                        <i class="fas fa-paper-plane text-primary"></i>
                    </button>
                </form>
            </div>
        </div>

        <!-- User list panel -->
        <div class="col-lg-3 chat-users border-start" id="userListPanel">
            <div class="p-3 border-bottom">
                <h6 class="mb-0">{% trans %}ONLINE_USERS_KEY{% endtrans %}</h6>
            </div>
            <div class="p-3">
                <!-- Teachers section -->
                <div class="mb-4">
                    <h6 class="text-muted small mb-2">{% trans %}TEACHERS_KEY{% endtrans %}</h6>
                    <div class="online-teachers">
                        {% for teacher in onlineTeachers|default([]) %}
                            <div class="user-item d-flex align-items-center mb-3">
                                <div class="avatar avatar-xs me-2">
                                    <img src="{{ teacher.avatar }}" class="avatar-img rounded-circle" alt="">
                                    <span class="position-absolute bottom-0 end-0 small">
                                        <span class="badge bg-success rounded-circle">
                                            <span class="visually-hidden">{% trans %}ONLINE_KEY{% endtrans %}</span>
                                        </span>
                                    </span>
                                </div>
                                <div class="small">
                                    <div class="fw-bold">{{ teacher.name }}</div>
                                    <div class="text-muted">{{ teacher.status }}</div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Students section -->
                <div>
                    <h6 class="text-muted small mb-2">{% trans %}STUDENTS_KEY{% endtrans %}</h6>
                    <div class="online-students">
                        {% for student in onlineStudents|default([]) %}
                            <div class="user-item d-flex align-items-center mb-3">
                                <div class="avatar avatar-xs me-2">
                                    <img src="{{ student.avatar }}" class="avatar-img rounded-circle" alt="">
                                    <span class="position-absolute bottom-0 end-0 small">
                                        <span class="badge bg-success rounded-circle">
                                            <span class="visually-hidden">{% trans %}ONLINE_KEY{% endtrans %}</span>
                                        </span>
                                    </span>
                                </div>
                                <div class="small">
                                    <div class="fw-bold">{{ student.name }}</div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add necessary styles -->
<style>
.chat-interface {
    background: var(--bs-light);
    border-radius: 0.5rem;
    overflow: hidden;
    height: calc(100vh - 150px);
}

.chat-main {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.chat-messages-container {
    flex: 1;
    overflow-y: auto;
}

.chat-input {
    background: #fff;
}

.message-form {
    position: relative;
}

.char-counter {
    position: absolute;
    right: 50px;
    bottom: 8px;
    font-size: 12px;
    color: var(--bs-gray-500);
}

.typing-indicator {
    height: 20px;
}

@media (max-width: 991.98px) {
    .chat-users {
        position: fixed;
        top: 0;
        right: -100%;
        width: 280px;
        height: 100vh;
        background: #fff;
        z-index: 1050;
        transition: right 0.3s ease;
    }

    .chat-users.show {
        right: 0;
    }
}

.avatar {
    position: relative;
}

.avatar-xs {
    width: 1.5rem;
    height: 1.5rem;
}

.avatar-sm {
    width: 2rem;
    height: 2rem;
}

.avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.chat-messages {
    display: flex;
    flex-direction: column;
}

.message {
    max-width: 75%;
    margin-bottom: 1rem;
}

.message-bubble {
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    position: relative;
}

.message-out .message-bubble {
    background-color: #dcf8c6;
}

.message-in .message-bubble {
    background-color: white;
}

.typing-indicator {
    padding: 0.5rem;
    border-radius: 1rem;
    background-color: white;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}
</style>
