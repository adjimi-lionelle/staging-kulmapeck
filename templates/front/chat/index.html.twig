{% extends "front/base.html.twig" %}

{% block title %} - Chat{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .chat-wrapper {
            height: calc(100vh - 60px);
            background-color: #f0f2f5;
        }
        .chat-container {
            height: 100%;
            display: flex;
            padding: 0;
        }
        .chat-sidebar {
            width: 350px;
            background: white;
            border-right: 1px solid #e9edef;
            display: flex;
            flex-direction: column;
            height: 100%;
        }
        .chat-sidebar-header {
            padding: 16px;
            background: #f0f2f5;
            border-bottom: 1px solid #e9edef;
        }
        .chat-sidebar-header h5 {
            margin-bottom: 16px;
            color: #111b21;
        }
        .search-bar {
            background: white;
            border-radius: 8px;
            padding: 8px 12px;
            border: none;
        }
        .chat-group-list {
            flex: 1;
            overflow-y: auto;
        }
        .chat-group {
            padding: 12px 16px;
            border-bottom: 1px solid #e9edef;
            cursor: pointer;
            display: flex;
            align-items: center;
            transition: background-color 0.2s;
        }
        .chat-group:hover {
            background-color: #f0f2f5;
        }
        .group-info {
            flex: 1;
        }
        .group-info h6 {
            margin: 0;
            color: #111b21;
            font-size: 16px;
        }
        .group-info p {
            margin: 4px 0 0;
            font-size: 14px;
            color: #667781;
        }
        .chat-main {
            flex: 1;
            display: flex;
            flex-direction: column;
            background: #efeae2;
            position: relative;
        }
        .chat-main-header {
            padding: 16px;
            background: #f0f2f5;
            border-bottom: 1px solid #e9edef;
        }
        .chat-messages {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
        }
        .welcome-message {
            text-align: center;
            color: #8696a0;
            margin-top: 40px;
        }
        .chat-input-area {
            padding: 16px;
            background: #f0f2f5;
            display: flex;
            gap: 8px;
            align-items: center;
        }
        .chat-input {
            border-radius: 8px;
            border: none;
            padding: 12px;
            flex: 1;
        }
        .chat-send {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .setup-container {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f0f2f5;
            flex-direction: column;
            gap: 16px;
        }
    </style>
{% endblock %}

{% block mainContent %}
    {% if needsSetup is defined and needsSetup %}
        {% include 'front/chat/_setup_modal.html.twig' with {
            'classes': classes,
            'specialites': specialites,
            'eleve': eleve
        } %}
        <div class="setup-container">
            <div class="text-center">
                <h3>{% trans %}WELCOME_TO_CHAT_KEY{% endtrans %}</h3>
                <p>{% trans %}PLEASE_SETUP_PROFILE_KEY{% endtrans %}</p>
            </div>
        </div>
    {% else %}
        <div class="chat-wrapper">
            <div class="container-fluid chat-container">
                <!-- Groups column -->
                <div class="chat-sidebar">
                    <div class="chat-sidebar-header">
                        <h5>{% trans %}DISCUSSIONS_KEY{% endtrans %}</h5>
                        <input type="text" class="form-control search-bar" placeholder="{% trans %}SEARCH_KEY{% endtrans %}">
                    </div>
                    <div id="group-list" class="chat-group-list">
                        {% if groups is not defined or groups is empty %}
                            <p class="text-center mt-3">{% trans %}NO_GROUPS_YET_KEY{% endtrans %}</p>
                        {% else %}
                            {% for group in groups %}
                                <div class="chat-group" data-group-id="{{ group.id }}">
                                    <div class="group-avatar">
                                        <i class="fas fa-users fa-2x text-muted"></i>
                                    </div>
                                    <div class="group-info">
                                        <h6>{{ group.name }}</h6>
                                        <p class="text-muted">{{ group.matiere }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>

                <!-- Main chat column -->
                <div class="chat-main">
                    <div class="chat-main-header">
                        <h5 class="chat-title m-0" id="chat-title" data-group-id="">{% trans %}SELECT_GROUP_TO_CHAT_KEY{% endtrans %}</h5>
                    </div>
                    <div class="chat-messages">
                        <p class="welcome-message">{% trans %}WELCOME_MESSAGE_KEY{% endtrans %}</p>
                    </div>
                    <div id="chat-input-area" class="chat-input-area">
                        <input type="text" id="chat-message" class="chat-input" placeholder="{% trans %}WRITE_MESSAGE_KEY{% endtrans %}" disabled>
                        <button id="send-message" class="btn btn-primary chat-send" disabled>
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const chatGroups = document.querySelectorAll('.chat-group');
            const chatTitle = document.getElementById('chat-title');
            const chatInput = document.getElementById('chat-message');
            const sendButton = document.getElementById('send-message');
            const chatInputArea = document.getElementById('chat-input-area');

            chatGroups.forEach(group => {
                group.addEventListener('click', function() {
                    // Remove active class from all groups
                    chatGroups.forEach(g => g.classList.remove('active'));
                    // Add active class to clicked group
                    this.classList.add('active');
                    
                    // Update chat title
                    const groupName = this.querySelector('h6').textContent;
                    chatTitle.textContent = groupName;
                    chatTitle.dataset.groupId = this.dataset.groupId;

                    // Enable chat input
                    chatInput.disabled = false;
                    sendButton.disabled = false;
                    chatInputArea.classList.remove('d-none');
                });
            });
        });
    </script>
{% endblock %}
