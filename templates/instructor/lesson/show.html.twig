<!DOCTYPE html>

<title>Lesson</title>

{% block body %}
    <h1>Lesson</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ lesson.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ lesson.slug }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ lesson.content }}</td>
            </tr>
            <tr>
                <th>VideoLink</th>
                <td>{{ lesson.videoLink }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ lesson.numero }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ lesson.poster }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ lesson.updatedAt ? lesson.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_instructor_lesson_index') }}">back to list</a>

    <a href="{{ path('app_instructor_lesson_edit', {'id': lesson.id}) }}">edit</a>

    {{ include('instructor/lesson/_delete_form.html.twig') }}
{% endblock %}
