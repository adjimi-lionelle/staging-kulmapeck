{% extends 'front/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block mainContent %}
    <section class="pt-4 pt-sm-5">
        <div class="container">
            <div class="row g-4 g-md-5 justify-content-between">
                <div class="col-lg-12 mb-5">
                    <div class="bg-dark rounded-3 p-4 p-sm-5 position-relative">
                        {{ form_start(registrationForm) }}
                            <div class="row g-3">
                                {% if registrationForm.parentCode is defined %}
                                <div class="col-12">
                                    {{ form_row(registrationForm.parentCode) }}
                                </div>
                                {% endif %}
                                
                                <div class="col-12">
                                    {{ form_row(registrationForm.fullName) }}
                                </div>

                                <div class="col-12">
                                    {{ form_row(registrationForm.username) }}
                                </div>

                                <div class="col-12">
                                    {{ form_row(registrationForm.phoneNumber) }}
                                </div>

                                <div class="col-12">
                                    {{ form_row(registrationForm.plainPassword) }}
                                </div>

                                <div class="col-12">
                                    {{ form_row(registrationForm.agreeTerms) }}
                                </div>

                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Register</button>
                                </div>
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}